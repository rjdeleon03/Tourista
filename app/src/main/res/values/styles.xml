<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <!-- Drawer theme -->
    <style name="DrawerTheme" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryLight</item>
    </style>

    <!-- Darker text input theme -->
    <style name="TextInputDarkerAccentTheme"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <!-- No blank EditText theme -->
    <style name="NoBlankEditTextTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Default card view theme -->
    <style name="CardViewThemeDefault" parent="Widget.MaterialComponents.CardView">
        <item name="android:elevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

</resources>
